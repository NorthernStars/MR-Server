<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="remotecontrol,core,">
  <appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS}(%r) [%t] %-5level %logger{36} - %msg%n"/>
      <filters>
        <MarkerFilter marker="EXCEPTION" onMatch="DENY" onMismatch="ACCEPT"/>
      </filters>
    </Console>
    <RandomAccessFile name="ERROR" fileName="logs/error_${sys:Server}.log" >
      <PatternLayout pattern="%d{HH:mm:ss.SSS}(%r) [%t] %-5level %logger{36} %C{1}.%M %m %ex%n"/>
      <filters>
        <MarkerFilter marker="EXCEPTION" onMatch="ACCEPT" onMismatch="DENY"/>
      </filters>
    </RandomAccessFile>
  </appenders>
  <loggers>
    <logger name="SERVERCORE" level="debug">
      <appender-ref ref="Console"/>
      <appender-ref ref="ERROR" />
    </logger>
    <logger name="SERVERCONFIG" level="info">
      <appender-ref ref="Console"/>
      <appender-ref ref="ERROR" />
    </logger>
    <logger name="SCENARIOMANAGEMENT" level="debug">
      <appender-ref ref="Console"/>
      <appender-ref ref="ERROR" />
    </logger>
    <logger name="VISIONMANAGEMENT" level="debug">
      <appender-ref ref="Console"/>
      <appender-ref ref="ERROR" />
    </logger>
    <logger name="BOTCONTROLMANAGEMENT" level="debug">
      <appender-ref ref="Console"/>
      <appender-ref ref="ERROR" />
    </logger>
    <logger name="GRAPHICSMANAGEMENT" level="debug">
      <appender-ref ref="Console"/>
      <appender-ref ref="ERROR" />
    </logger>
    <logger name="BOTAIMANAGEMENT" level="debug">
      <appender-ref ref="Console"/>
      <appender-ref ref="ERROR" />
    </logger>
    <root level="error">
    </root>
  </loggers>
</Configuration>